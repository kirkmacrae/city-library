<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.id %></td>
        <td><%= library.name %></td>
        <td><%= library.address %></td>
        <td><%= library.phone_number %></td>
        <td>
          <%= link_to 'Show', library, class: 'btn btn-primary py-0 btn-sm' %>
          <%= link_to 'Edit', edit_library_path(library), class: 'btn btn-primary py-0 btn-sm' %>
          <%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger py-0 btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library', new_library_path, class: 'btn btn-primary py-0 m-1 btn-sm' %>
