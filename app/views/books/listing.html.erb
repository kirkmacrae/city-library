<p id="notice"><%= notice %></p>

<h1>Book Listing</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Subgenre</th>
      <th>Pages</th>
      <th>Publisher</th>
      <th>CopiesAvailable</th>      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.subgenre %></td>
        <td><%= book.pages %></td>
        <td><%= book.publisher %></td>
        <td><%= book.copies %></td>
        <% if current_user %>   
        <!-- TODO: check to see if copies > 0-->     
        <td><%= link_to 'Borrow',  books_borrow_path(:book_number => book.book_number) %></td>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
